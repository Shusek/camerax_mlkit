<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/card_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card scanner" />

    <Button
        android:id="@+id/aztec_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aztec scanner" />

    <Button
        android:id="@+id/document_scanner_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document scanner" />

    <Button
        android:id="@+id/document_scanner_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document scanner online" />
</LinearLayout>